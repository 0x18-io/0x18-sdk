{
    "name": "0x18-sdk",
    "version": "1.0.0",
    "description": "Official 0x18-sdk",
    "module": "index.ts",
    "types": "./lib/cjs/types/index.d.ts",
    "main": "./lib/cjs/index.js",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/types/index.d.ts",
                "default": "./lib/esm/index.mjs"
            },
            "require": {
                "types": "./lib/cjs/types/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        }
    },
    "files": [
        "lib",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "test": "jest",
        "prepare": "yarn build",
        "build:clean": "rm -rf dist",
        "clean": "rm -rf ./lib",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
        "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
        "prepack": "npm run build",
        "testscript:wallet-read": "ts-node --project ./configs/tsconfig.cjs.json examples/wallets/read.ts",
        "testscript:wallet-paginate": "ts-node --project ./configs/tsconfig.cjs.json examples/wallets/paginate.ts",
        "testscript:wallet-update": "ts-node --project ./configs/tsconfig.cjs.json examples/wallets/save.ts",
        "testscript:wallet-create": "ts-node --project ./configs/tsconfig.cjs.json examples/wallets/create.ts",
        "testscript:ledger-read": "ts-node --project ./configs/tsconfig.cjs.json examples/ledgers/read.ts",
        "testscript:ledger-paginate": "ts-node --project ./configs/tsconfig.cjs.json examples/ledgers/paginate.ts",
        "testscript:ledger-update": "ts-node --project ./configs/tsconfig.cjs.json examples/ledgers/save.ts",
        "testscript:ledger-create": "ts-node --project ./configs/tsconfig.cjs.json examples/ledgers/create.ts",
        "testscript:transaction-read": "ts-node --project ./configs/tsconfig.cjs.json examples/transactions/read.ts",
        "testscript:transaction-paginate": "ts-node --project ./configs/tsconfig.cjs.json examples/transactions/paginate.ts",
        "testscript:transaction-update": "ts-node --project ./configs/tsconfig.cjs.json examples/transactions/save.ts",
        "testscript:transaction-create": "ts-node --project ./configs/tsconfig.cjs.json examples/transactions/create.ts",
        "testscript:transaction-create-bulk": "ts-node --project ./configs/tsconfig.cjs.json examples/transactions/create-bulk.ts",
        "testscript:gql-client": "ts-node --project ./configs/tsconfig.cjs.json examples/gql/gql-test.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/0x18-io/0x18-sdk.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/0x18-io/0x18-sdk/issues"
    },
    "homepage": "https://github.com/0x18-io/0x18-sdk#readme",
    "devDependencies": {
        "@jest/globals": "^29.5.0",
        "@types/jest": "^29.4.1",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.14.1",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-standard-with-typescript": "^34.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "jest": "^29.5.0",
        "nock": "^13.3.0",
        "prettier": "^2.8.4",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "*"
    },
    "dependencies": {
        "ethers": "^6.0.8",
        "gql-query-builder": "^3.8.0",
        "graphql": "^16.6.0",
        "graphql-request": "^5.1.0",
        "lodash": "^4.17.21",
        "semaphore-async-await": "^1.5.1",
        "yup": "^1.0.2"
    }
}
